<div class='index-links'>
  <div class='touch-links'>
    <div class='nav-icon forward-icon'>
      {{#if showForwardArrow}}
        <icon class="glyphicon glyphicon-triangle-left"></icon>
      {{/if}}
    </div>
    {{#each links as |link|}}
      {{#press-box href=link.route linkColor=link.linkColor}}
        <div class='link-title'>
          <h2>{{upper link.title}}</h2>
        </div>
      {{/press-box}}
    {{/each}}
    <div class='nav-icon backward-icon'>
      {{#if showBackArrow}}
        <icon class="glyphicon glyphicon-triangle-right"></icon>
      {{/if}}
    </div>
  </div>
</div>
