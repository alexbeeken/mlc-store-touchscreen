<div class='ps-container'>
  {{#liquid-bind currentSlideIdx}}
    <div class='ps-photo'>
      {{#if media.isMobile}}
        <a {{action 'switchIdx' on='swipeRight'}}>
          <img src={{slide.path}}>
        </a>
      {{else}}
        <img src={{currentSlide.path}}/>
      {{/if}}
    </div>
    <div class='ps-titles'>
      <div class='ps-year'>
        <h1>{{currentSlide.year}}</h1>
      </div>
      <div class='ps-data'>
        <h2>{{currentSlide.levelFeet}}</h2>
        <h3>{{currentSlide.levelMeter}}</h3>
      </div>
    </div>
  {{/liquid-bind}}
</div>
<div class='photo-links'>
  {{#each slides as |slide index|}}
    {{#if (eq currentSlideIdx index)}}
      <div class='photo-link'>
        <div class='selected'>
          <a {{action 'switchIdx' index}}>
            <img src={{slide.path}}>
          </a>
        </div>
      </div>
    {{else}}
      <div class='photo-link'>
        <div class='unselected'>
          <a {{action 'switchIdx' index}}>
            <img src={{slide.path}}>
          </a>
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>
